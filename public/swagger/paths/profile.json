{
    "get": {
        "summary": "Get Authenticated User Info",
        "tags": [
            "User"
        ],
        "security": [
            {
                "bearerAuth": []
            }
        ],
        "responses": {
            "200": {
                "description": "Fetched user info successfully",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "Fetched user info successfully"
                                },
                                "user": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "example": "clwipg6w10000jifz2ckh9d4f"
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "John Doe"
                                        },
                                        "email": {
                                            "type": "string",
                                            "example": "johndoe@example.com"
                                        },
                                        "phone": {
                                            "type": "string",
                                            "example": "+123456789"
                                        },
                                        "password": {
                                            "type": "string",
                                            "example": "$argon2id$... (hashed)"
                                        },
                                        "createdAt": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "updatedAt": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "403": {
                "description": "Unauthorized access",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "Unauthorized"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}